        ((= n 3) 'thirty) 
        ((= n 4) 'forty) 
        ((= n 5) 'fifty) 
        ((= n 6) 'sixty) 
        ((= n 7) 'seventy) 
        ((= n 8) 'eighty) 
        ((= n 9) 'ninety) 
