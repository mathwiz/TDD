(define (last3 n) 
  (cond ((< (count n) 3) n) 
        (else (word (last (butlast (butlast n))) 
                    (last (butlast n)) 
                    (last n)))))

(define (butlast3 n) 
  (cond ((<= (count n) 3) "") 
        (else (word (first n) 
                    (butlast3 (butfirst n))))))

(define (to-triples n) 
  (cond ((empty? n) 
         ()) 
        (else (se (to-triples (butlast3 n)) 
                  (last3 n)))))

(define (teenword n) 
  (cond ((= n 10) 'ten) 
        ((= n 11) 'eleven) 
        ((= n 12) 'twelve) 
        ((= n 13) 'thirteen) 
        ((= n 15) 'fifteen) 
        (else (word (onesword (- n 10)) 'teen))))

(define (onesword n) 
